<div class="mx-auto mt-8 max-w-md space-y-6">
  <div class="flex items-center justify-between">
    <h1 class="text-3xl font-bold">Your profile</h1>
    <%= link_to "Edit", edit_user_path(@user), class: "btn btn-outline btn-sm" %>
  </div>

  <div class="bg-base-200 rounded-box p-6 space-y-4">
    <div>
      <p class="text-sm text-base-content/60">Name</p>
      <p class="text-lg font-medium"><%= @user.first_name %> <%= @user.last_name %></p>
    </div>

    <div>
      <p class="text-sm text-base-content/60">Username</p>
      <p class="text-lg font-medium"><%= @user.username %></p>
    </div>

    <div>
      <p class="text-sm text-base-content/60">Email</p>
      <p class="text-lg font-medium"><%= @user.email_address %></p>
    </div>

  </div>

</div>
