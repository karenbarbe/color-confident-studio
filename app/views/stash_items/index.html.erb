<% content_for :title, "Stash items" %>

<% content_for :full_width_after do %>

  <div class="w-full mt-9">
    <div class="mx-auto px-4 md:max-w-4xl lg:max-w-5xl xl:max-w-6xl space-y-4">
      <div>
        <h1 class="font-bold text-3xl text-base-content">Your stash</h1>
        <p class="text-base-content/70 mt-1">The colors you love in one place</p>
      </div>

    </div>
    <div class="bg-base-200 pt-3 pb-20 transition-colors duration-500 space-y-2">
      <div class="mx-auto px-4 md:max-w-4xl lg:max-w-5xl xl:max-w-6xl space-y-2">
        <%= render "shared/color_grid", product_colors: @product_colors, view_context: "stash" %>
      </div>
    </div>

  </div>

<% end %>
