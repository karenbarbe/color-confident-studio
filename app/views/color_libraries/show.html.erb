<% content_for :title, "#{@brand.name} Color Library" %>

<div class="container mx-auto w-full space-y-4 px-4">
  <nav class="text-sm breadcrumbs mb-4">
    <%= link_to "Color Libraries", color_libraries_path %> / 
    <%= link_to @category.titleize, color_library_category_path(@category) %> / 
    <span class="font-bold"><%= @brand.name %></span>
  </nav>

  <h1 class="font-bold text-3xl"><%= @brand.name %> colors</h1>

  <% @colors_by_family.each do |family, colors| %>
    <section class="space-y-2">
      <h2 class="font-bold text-2xl"><%= family %></h2>
      <%= render "shared/color_grid", product_colors: colors %>
    </section>
  <% end %>

</div>
