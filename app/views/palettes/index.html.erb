<% content_for :title, "My palettes" %>

<div class="mx-auto w-full mt-8 space-y-8">
  <%# Flash messages container for Turbo Stream updates %>
  <div id="flash-messages" class="fixed top-4 right-4 z-100 space-y-2">
    <%= render "shared/flash", notice: notice, alert: alert %>
  </div>

  <%# Header %>
  <div class="space-y-4 sm:flex justify-between items-center">
    <div>
      <h1 class="font-bold text-3xl lg:text-4xl text-base-content">Your palettes</h1>
      <p class="text-base-content/70 mt-1">Waiting for your next project</p>
    </div>
    <% if policy(Palette).create? %>
      <%= button_to "Create a palette", palettes_path, method: :post, class: "btn btn-neutral" %>
    <% end %>
  </div>

  <%# Palettes grid %>
  <% if @palettes.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @palettes.each do |palette| %>
        <%= render "palette_card", palette: palette %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16">
      <h3 class="text-lg font-medium text-base-content">No palettes yet</h3>
      <p class="text-base-content/50 mt-1">Create your first color palette to get started</p>
      <% if policy(Palette).create? %>
        <%= button_to "Create a palette", palettes_path, method: :post, class: "btn btn-outline mt-4" %>
      <% end %>
    </div>
  <% end %>

</div>
