<% content_for :title, "My palettes" %>

<div class="container mx-auto mt-8 px-4 space-y-8">

  <%# Header with create button %>
  <div class="flex justify-between items-center">
    <div>
      <h1 class="font-bold text-3xl text-gray-900">My palettes</h1>
      <p class="text-gray-500 mt-1">Your color combinations</p>
    </div>
    <%= button_to "Create a palette", palettes_path, method: :post, class: "btn btn-primary" %>
  </div>

  <%# Published palettes section %>
  <section class="space-y-4">
    <% if @palettes.any? %>
      <h2 class="text-lg font-semibold text-gray-700">Saved palettes</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @palettes.each do |palette| %>
          <%= render "palette_card", palette: palette, is_draft: false %>
        <% end %>
      </div>
    <% else %>
      <% unless @draft_palettes.any? %>
        <div class="text-center py-16">
          <div class="text-gray-400 mb-4">
            <%= icon(:palette_outline, class: "size-16 mx-auto") %>
          </div>
          <h3 class="text-lg font-medium text-gray-900">No palettes yet</h3>
          <p class="text-gray-500 mt-1">Create your first color palette to get started.</p>
          <%= button_to "Create a palette", palettes_path, method: :post, class: "btn btn-primary mt-4" %>
        </div>
      <% end %>
    <% end %>
  </section>

  <%# Draft palettes section %>
  <% if @draft_palettes.any? %>
    <section class="space-y-4">
      <h2 class="text-lg font-semibold text-gray-700">Drafts</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @draft_palettes.each do |palette| %>
          <%= render "palette_card", palette: palette, is_draft: true %>
        <% end %>
      </div>
    </section>
  <% end %>


</div>
