<% content_for :title, "Palettes" %>

<div class="container mx-auto mt-8 px-4">

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-3xl">Palettes</h1>
  </div>

  <div id="palettes" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @palettes.any? %>
      <% @palettes.each do |palette| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render palette %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Show", palette, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= link_to "Edit", edit_palette_path(palette), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= button_to "Destroy", palette, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No palettes yet.</p>
    <% end %>
  </div>
</div>
