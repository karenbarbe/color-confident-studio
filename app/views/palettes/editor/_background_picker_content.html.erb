<%# locals: (palette:, current_background:, stash_fabric_count:, fabric_brands:, selected_brand:, brand_fabrics:, selected_family: nil, lightness: nil, source: "brand") %>

<turbo-frame id="panel-content">
  <div class="space-y-6"
       data-controller="background-picker"
       data-background-picker-palette-id-value="<%= palette.id %>"
       data-background-picker-brand-id-value="<%= selected_brand&.id %>"
       data-background-picker-source-value="<%= source %>"
       data-background-picker-family-value="<%= selected_family %>">

    <%# Current selection (if any) %>
    <% if current_background %>
      <section class="px-4 pt-4">
        <div class="flex items-center justify-between p-3 bg-zinc-100 rounded-lg">
          <div class="flex items-center gap-3">
            <span class="size-10 rounded-full ring-1 ring-inset ring-black/10"
                  style="background-color: #<%= current_background.hex_color %>;"></span>
            <div>
              <p class="font-medium text-base-content"><%= current_background.vendor_code %></p>
              <p class="text-sm text-base-content/50"><%= current_background.name %></p>
            </div>
          </div>
          <button type="button"
                  class="text-sm text-red-600 hover:text-red-700 font-medium"
                  data-action="click->palette-editor#removeBackgroundColor"
            data-slot-id="<%= palette.background_slots.first&.id %>">
            Remove
          </button>
        </div>
      </section>
    <% end %>

    <%# Browse fabrics section %>
    <section class="px-4 pt-4">
      <div class="flex items-center justify-between mb-3">
        <div class="flex items-center gap-2">
          <span class="text-sm font-medium text-base-content/50 uppercase tracking-wide">Browse Fabrics</span>
        </div>

        <%# Source selector dropdown (Stash + Brands) %>
        <div class="relative" data-controller="dropdown">
          <button type="button"
                  class="inline-flex items-center gap-2 px-4 py-2 text-sm bg-zinc-100 border border-base-content rounded-full hover:bg-zinc-200 transition-colors"
                  data-action="click->dropdown#toggle">
            <span data-background-picker-target="sourceName">
              <%= source == "stash" ? "From stash" : selected_brand&.name&.truncate(20) || "Select source" %>
            </span>
            <svg xmlns="http://www.w3.org/2000/svg" class="size-4 transition-transform" data-dropdown-target="icon" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
            </svg>
          </button>

          <div class="absolute right-0 top-full mt-1 w-56 bg-white border border-zinc-200 rounded-lg shadow-lg z-10 hidden"
               data-dropdown-target="menu">
            <div class="py-1 max-h-60 overflow-y-auto">
              <%# From stash option %>
              <% if stash_fabric_count > 0 %>
                <button type="button"
                        class="w-full px-4 py-2 text-left text-sm hover:bg-zinc-100 flex items-center justify-between <%= 'bg-zinc-50 font-medium' if source == 'stash' %>"
                        data-action="click->background-picker#selectSource"
                  data-source="stash"
                  data-source-name="From stash">
                  <span>From stash</span>
                  <span class="text-xs text-zinc-400"><%= stash_fabric_count %></span>
                </button>
                <div class="h-px bg-zinc-200 my-1"></div>
              <% end %>

              <%# Brand options %>
              <% fabric_brands.each do |brand| %>
                <button type="button"
                        class="w-full px-4 py-2 text-left text-sm hover:bg-zinc-100 flex items-center justify-between <%= 'bg-zinc-50 font-medium' if source == 'brand' && brand.id == selected_brand&.id %>"
                        data-action="click->background-picker#selectSource"
                  data-source="brand"
                  data-brand-id="<%= brand.id %>"
                  data-source-name="<%= brand.name %>">
                  <span><%= brand.name %></span>
                  <span class="text-xs text-zinc-400"><%= brand.product_colors_count %></span>
                </button>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <%# Fabric swatches list (Turbo Frame for updates) %>
      <turbo-frame id="brand-fabrics-list" data-background-picker-target="fabricsList">
        <%= render "palettes/editor/brand_fabrics_list",
            palette: palette,
            brand_fabrics: brand_fabrics,
            current_background: current_background %>
      </turbo-frame>
    </section>

    <%# Color controls section %>
    <section class="px-4 pb-6">
      <div class="flex items-center gap-2 mb-4 pt-4 border-t border-zinc-200">
        <span class="text-sm font-medium text-base-content/50 uppercase tracking-wide">Color Controls</span>
      </div>

      <%# Color family pills %>
      <%= render "palettes/editor/color_family_pills", 
          selected_family: selected_family,
          controller_name: "background-picker" %>

      <%# Lightness slider %>
      <div class="mt-6 space-y-2">
        <div class="flex justify-between text-xs text-base-content/50">
          <span>Dark</span>
          <span>Light</span>
        </div>
        <div class="relative">
          <div class="h-3 rounded-full lightness-gradient"></div>
          <input type="range"
                 min="0"
                 max="100"
                 value="<%= lightness || 50 %>"
                 class="absolute inset-0 w-full h-3 opacity-0 cursor-pointer"
                 data-background-picker-target="lightnessSlider"
                 data-action="input->background-picker#updateLightness change->background-picker#applyFilters">
          <div class="absolute top-1/2 -translate-y-1/2 size-5 bg-white rounded-full shadow-md border-2 border-zinc-300 pointer-events-none transition-all"
               data-background-picker-target="lightnessThumb"
               style="left: <%= lightness || 50 %>%;">
          </div>
        </div>
      </div>

      <%# Reset button %>
      <div class="mt-4 text-center">
        <button type="button"
                class="text-sm text-base-content/50 hover:text-base-content/70 underline"
                data-action="click->background-picker#resetFilters">
          Reset filters
        </button>
      </div>
    </section>

  </div>
</turbo-frame>
