<%# locals: (palette:, thread_slots:) %>

<div class="mt-6">
  <div class="bg-base-100 rounded-2xl shadow-sm p-6 space-y-5">

    <%# Top row: Name + Buttons %>
    <div class="flex flex-col">

      <%# Palette name %>
        <h1 class="font-bold text-3xl text-base-content">
          <%= @palette.name.presence || "Untitled palette" %>
        </h1>

      <%# Action buttons %>
      <div class="flex items-center gap-2">

        <%= link_to "Cancel", palettes_path,
            class: "btn btn-outline" %>

        <%= render "palettes/editor/save_button", palette: palette, thread_slots: thread_slots %>

      </div>
    </div>

    <%# Stats row %>
    <%= render "palettes/editor/header_stats", palette: palette, thread_slots: thread_slots %>

    <%# Background selector row %>
    <div class="flex items-center justify-between">
      <%= render "palettes/editor/background_selector", palette: palette %>
    </div>

  </div>
</div>
