<%# locals: (palette:, mode:, current_slot: nil, current_color: nil, matching_threads:, total_count:, thread_brands:, selected_brand:, selected_family: nil, saturation: nil, lightness: nil) %>

<turbo-frame id="panel-content">
  <div class="space-y-6" 
       data-controller="color-controls"
       data-color-controls-palette-id-value="<%= palette.id %>"
       data-color-controls-brand-id-value="<%= selected_brand.id %>"
       data-color-controls-family-value="<%= selected_family %>"
       data-color-controls-saturation-value="<%= saturation %>"
       data-color-controls-lightness-value="<%= lightness %>"
       data-color-controls-mode-value="<%= mode %>"
       data-color-controls-slot-id-value="<%= current_slot&.id %>">

    <%# Matching threads section %>
    <section class="px-4 pt-4">
      <div class="flex items-center justify-between mb-3">
        <div class="flex items-center gap-2">
          <span class="text-sm font-medium text-zinc-500 uppercase tracking-wide">Matching Threads</span>
          <span class="px-2 py-0.5 text-xs bg-zinc-200 text-zinc-600 rounded"
                data-color-controls-target="countBadge">
            <%= total_count %>
          </span>
        </div>

        <%# Brand selector dropdown %>
        <div class="relative" data-controller="dropdown">
          <button type="button" 
                  class="inline-flex items-center gap-2 px-4 py-2 text-sm bg-zinc-100 border border-zinc-900 rounded-full hover:bg-zinc-200 transition-colors"
                  data-action="click->dropdown#toggle">
            <span data-color-controls-target="brandName"><%= selected_brand.name.truncate(20) %></span>
            <svg xmlns="http://www.w3.org/2000/svg" class="size-4 transition-transform" data-dropdown-target="icon" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
            </svg>
          </button>

          <div class="absolute right-0 top-full mt-1 w-56 bg-white border border-zinc-200 rounded-lg shadow-lg z-10 hidden"
               data-dropdown-target="menu">
            <div class="py-1 max-h-60 overflow-y-auto">
              <% thread_brands.each do |brand| %>
                <button type="button"
                        class="w-full px-4 py-2 text-left text-sm hover:bg-zinc-100 flex items-center justify-between <%= 'bg-zinc-50 font-medium' if brand.id == selected_brand.id %>"
                        data-action="click->color-controls#selectBrand"
                  data-brand-id="<%= brand.id %>"
                  data-brand-name="<%= brand.name %>">
                  <span><%= brand.name %></span>
                  <span class="text-xs text-zinc-400"><%= brand.product_colors_count %></span>
                </button>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <%# Thread swatches list (in a Turbo Frame for updates) %>
      <turbo-frame id="matching-threads-list" data-color-controls-target="threadsList">
        <%= render "palettes/editor/matching_threads_list", 
            palette: palette, 
            matching_threads: matching_threads,
            total_count: total_count,
            mode: mode,
            current_slot: current_slot %>
      </turbo-frame>
    </section>

    <%# Color controls section %>
    <section class="px-4 pb-6">
      <div class="flex items-center gap-2 mb-4 pt-4 border-t border-zinc-200">
        <span class="text-sm font-medium text-zinc-500 uppercase tracking-wide">Color Controls</span>
        <button type="button" 
                class="text-zinc-400 hover:text-zinc-600"
                title="Filter threads by color family, saturation, and lightness">
          <svg xmlns="http://www.w3.org/2000/svg" class="size-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>

      <%# Color family pills %>
      <%= render "palettes/editor/color_family_pills", selected_family: selected_family %>

      <%# Saturation and Lightness sliders %>
      <div class="grid grid-cols-2 gap-8 mt-6">
        <%# Saturation slider %>
        <div class="space-y-2">
          <div class="flex justify-between text-xs text-zinc-500">
            <span>Muted</span>
            <span>Vivid</span>
          </div>
          <div class="relative">
            <div class="h-3 rounded-full saturation-gradient"></div>
            <input type="range" 
                   min="0" 
                   max="100" 
                   value="<%= saturation || 50 %>"
                   class="absolute inset-0 w-full h-3 opacity-0 cursor-pointer"
                   data-color-controls-target="saturationSlider"
                   data-action="input->color-controls#updateSaturation change->color-controls#applyFilters">
            <div class="absolute top-1/2 -translate-y-1/2 size-5 bg-white rounded-full shadow-md border-2 border-zinc-300 pointer-events-none transition-all"
                 data-color-controls-target="saturationThumb"
                 style="left: <%= saturation || 50 %>%;">
            </div>
          </div>
        </div>

        <%# Lightness slider %>
        <div class="space-y-2">
          <div class="flex justify-between text-xs text-zinc-500">
            <span>Dark</span>
            <span>Light</span>
          </div>
          <div class="relative">
            <div class="h-3 rounded-full lightness-gradient"></div>
            <input type="range" 
                   min="0" 
                   max="100" 
                   value="<%= lightness || 50 %>"
                   class="absolute inset-0 w-full h-3 opacity-0 cursor-pointer"
                   data-color-controls-target="lightnessSlider"
                   data-action="input->color-controls#updateLightness change->color-controls#applyFilters">
            <div class="absolute top-1/2 -translate-y-1/2 size-5 bg-white rounded-full shadow-md border-2 border-zinc-300 pointer-events-none transition-all"
                 data-color-controls-target="lightnessThumb"
                 style="left: <%= lightness || 50 %>%;">
            </div>
          </div>
        </div>
      </div>

      <%# Reset filters button %>
      <div class="mt-4 text-center">
        <button type="button"
                class="text-sm text-zinc-500 hover:text-zinc-700 underline"
                data-action="click->color-controls#resetFilters">
          Reset all filters
        </button>
      </div>
    </section>

  </div>
</turbo-frame>
