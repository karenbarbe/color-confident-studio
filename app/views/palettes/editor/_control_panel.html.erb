<%# locals: (palette:) %>

<%# Backdrop %>
<div class="fixed inset-0 bg-black/20 z-40 hidden opacity-0 transition-opacity duration-300"
     data-palette-editor-target="backdrop"
     data-action="click->palette-editor#closePanel">
</div>

<%# Panel %>
<div class="fixed bottom-0 left-0 right-0 z-50 transform translate-y-full transition-transform duration-300 ease-out"
     data-palette-editor-target="panel">

  <div class="bg-white rounded-t-2xl shadow-2xl max-h-[85vh] overflow-hidden flex flex-col mx-auto max-w-xl">

    <%# Panel header %>
    <div class="flex items-center justify-between p-4 border-b border-zinc-200"
         data-palette-editor-target="panelHeader">

      <%# "Add new color" mode header %>
      <div data-palette-editor-target="addModeHeader">
        <h2 class="text-xl font-semibold text-zinc-900">Add new color</h2>
      </div>

      <%# "Edit color" mode header (hidden by default) %>
      <div class="hidden items-center gap-3" data-palette-editor-target="editModeHeader">
        <span class="size-8 rounded-full ring-1 ring-inset ring-black/10"
              data-palette-editor-target="editColorSwatch"></span>
        <div>
          <span class="font-semibold text-zinc-900" data-palette-editor-target="editColorCode"></span>
          <span class="text-zinc-500" data-palette-editor-target="editColorName"></span>
        </div>
      </div>

      <%# "Background picker" mode header (hidden by default) %>
      <div class="hidden" data-palette-editor-target="backgroundModeHeader">
        <h2 class="text-xl font-semibold text-zinc-900">Select background fabric</h2>
      </div>

      <%# Right side: actions %>
      <div class="flex items-center gap-3">
        <%# Delete button (only in edit mode) %>
        <div class="hidden" data-palette-editor-target="deleteButtonContainer">
          <button type="button"
                  class="p-2 text-zinc-400 hover:text-red-500 transition-colors"
                  data-action="click->palette-editor#deleteColor"
            title="Remove color">
            <svg xmlns="http://www.w3.org/2000/svg" class="size-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M8.75 1A2.75 2.75 0 006 3.75v.443c-.795.077-1.584.176-2.365.298a.75.75 0 10.23 1.482l.149-.022.841 10.518A2.75 2.75 0 007.596 19h4.807a2.75 2.75 0 002.742-2.53l.841-10.519.149.023a.75.75 0 00.23-1.482A41.03 41.03 0 0014 4.193V3.75A2.75 2.75 0 0011.25 1h-2.5zM10 4c.84 0 1.673.025 2.5.075V3.75c0-.69-.56-1.25-1.25-1.25h-2.5c-.69 0-1.25.56-1.25 1.25v.325C8.327 4.025 9.16 4 10 4zM8.58 7.72a.75.75 0 00-1.5.06l.3 7.5a.75.75 0 101.5-.06l-.3-7.5zm4.34.06a.75.75 0 10-1.5-.06l-.3 7.5a.75.75 0 101.5.06l.3-7.5z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>

        <%# Close button %>
        <button type="button"
                class="p-2.5 bg-zinc-100 rounded-full text-zinc-500 hover:text-zinc-700 hover:bg-zinc-200 transition-colors"
                data-action="click->palette-editor#closePanel">
          <svg xmlns="http://www.w3.org/2000/svg" class="size-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>

    <%# Panel content (Turbo Frame for dynamic updates) %>
    <div class="flex-1 overflow-y-auto">
      <turbo-frame id="panel-content" data-palette-editor-target="panelContent">
        <%# Content loaded dynamically %>
        <div class="p-6 text-center text-zinc-500">
          <p>Loading...</p>
        </div>
      </turbo-frame>
    </div>

  </div>
</div>
