<%# locals: (palette:) %>

<%# Backdrop %>
<div class="fixed inset-0 bg-black/20 z-40 hidden opacity-0 transition-opacity duration-300"
     data-palette-editor-target="backdrop"
     data-action="click->palette-editor#closePanel">
</div>

<%# Panel %>
<div class="fixed bottom-0 left-0 right-0 z-50 transform translate-y-full transition-transform duration-300 ease-out"
     data-palette-editor-target="panel">

  <div class="bg-base-100 rounded-t-2xl shadow-2xl max-h-[85vh] overflow-hidden flex flex-col mx-auto max-w-xl">

    <%# Panel header %>
    <div class="flex items-center justify-between p-4 border-b border-base-content/70"
         data-palette-editor-target="panelHeader">

      <%# "Add thread" mode header %>
      <div data-palette-editor-target="addThreadHeader">
        <h2 class="text-xl font-semibold text-base-content">Add thread color</h2>
      </div>

      <%# "Edit thread" mode header (hidden by default) %>
      <div class="hidden items-center gap-3" data-palette-editor-target="editThreadHeader">
        <span class="size-8 rounded-full ring-1 ring-inset ring-black/10"
              data-palette-editor-target="editColorSwatch"></span>
        <div>
          <span class="font-semibold text-base-content" data-palette-editor-target="editColorCode"></span>
          <span class="text-base-content/70" data-palette-editor-target="editColorName"></span>
        </div>
      </div>

      <%# "Add background" mode header (hidden by default) %>
      <div class="hidden" data-palette-editor-target="addBackgroundHeader">
        <h2 class="text-xl font-semibold text-base-content">Add background color</h2>
      </div>

      <%# "Edit background" mode header (hidden by default) %>
      <div class="hidden items-center gap-3" data-palette-editor-target="editBackgroundHeader">
        <span class="size-8 rounded-full ring-1 ring-inset ring-black/10"
              data-palette-editor-target="editBackgroundSwatch"></span>
        <div>
          <span class="font-semibold text-base-content" data-palette-editor-target="editBackgroundCode"></span>
          <span class="text-base-content/70" data-palette-editor-target="editBackgroundName"></span>
        </div>
      </div>

      <%# Right side: actions %>
      <div class="flex items-center gap-3">
        <%# Delete button (shown in edit modes) %>
        <div class="hidden" data-palette-editor-target="deleteButtonContainer">
          <button type="button"
                  class="p-2 text-base-content/50 hover:text-error transition-colors cursor-pointer"
                  data-action="click->palette-editor#deleteColor"
            title="Remove color">
            <%= icon(:trash_outline, css_class: "size-6") %>
          </button>
        </div>

        <%# Close button %>
        <button type="button"
                class="p-2.5 bg-base-200 rounded-full text-base-content/70 hover:text-base-content hover:bg-base-content/10 transition-colors cursor-pointer"
                data-action="click->palette-editor#closePanel">
          <%= icon(:x_mark_outline, css_class: "size-6") %>
        </button>
      </div>
    </div>

    <%# Panel content (Turbo Frame for dynamic updates) %>
    <div class="flex-1 overflow-y-auto">
      <turbo-frame id="panel-content" data-palette-editor-target="panelContent">
        <%# Content loaded dynamically %>
        <div class="p-6 text-center text-base-content/50">
          <p>Loading...</p>
        </div>
      </turbo-frame>
    </div>

  </div>
</div>
