<%# locals: (palette:) %>

<%# Backdrop %>
<div class="fixed inset-0 bg-black/20 z-40 hidden opacity-0 transition-opacity duration-300"
     data-palette-editor-target="backdrop"
     data-action="click->palette-editor#closePanel">
</div>

<%# Panel %>
<div class="fixed bottom-0 left-0 right-0 z-50 transform translate-y-full transition-transform duration-300 ease-out"
     data-palette-editor-target="panel">

  <div class="bg-white rounded-t-2xl shadow-2xl max-h-[85vh] overflow-hidden flex flex-col mx-auto max-w-xl">

    <%# Panel header %>
    <div class="flex items-center justify-between p-4 border-b border-zinc-200"
         data-palette-editor-target="panelHeader">

      <%# "Add new color" mode header %>
      <div data-palette-editor-target="addModeHeader">
        <h2 class="text-xl font-semibold text-base-content">Add new color</h2>
      </div>

      <%# "Edit color" mode header (hidden by default) %>
      <div class="hidden items-center gap-3" data-palette-editor-target="editModeHeader">
        <span class="size-8 rounded-full ring-1 ring-inset ring-black/10"
              data-palette-editor-target="editColorSwatch"></span>
        <div>
          <span class="font-semibold text-base-content" data-palette-editor-target="editColorCode"></span>
          <span class="text-base-content/70" data-palette-editor-target="editColorName"></span>
        </div>
      </div>

      <%# "Background picker" mode header (hidden by default) %>
      <div class="hidden" data-palette-editor-target="backgroundModeHeader">
        <h2 class="text-xl font-semibold text-base-content">Select background fabric</h2>
      </div>

      <%# Right side: actions %>
      <div class="flex items-center gap-3">
        <%# Delete button (only in edit mode) %>
        <div class="hidden" data-palette-editor-target="deleteButtonContainer">
          <button type="button"
                  class="p-2 text-base-content/70 hover:text-red-500 transition-colors"
                  data-action="click->palette-editor#deleteColor"
            title="Remove color">
            <%= icon(:trash_outline, class: "size-6") %>
          </button>
        </div>

        <%# Close button %>
        <button type="button"
                class="p-2.5 bg-zinc-100 rounded-full text-base-content/50 hover:text-base-content/70 hover:bg-zinc-200 transition-colors"
                data-action="click->palette-editor#closePanel">
          <svg xmlns="http://www.w3.org/2000/svg" class="size-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>

    <%# Panel content (Turbo Frame for dynamic updates) %>
    <div class="flex-1 overflow-y-auto">
      <turbo-frame id="panel-content" data-palette-editor-target="panelContent">
        <%# Content loaded dynamically %>
        <div class="p-6 text-center text-base-content/50">
          <p>Loading...</p>
        </div>
      </turbo-frame>
    </div>

  </div>
</div>
