<%# locals: (selected_family: nil) %>

<div class="grid grid-cols-3 gap-1.5" data-palette-color-picker-target="familyPills">
  <% color_family_tags.each do |family| %>
    <% is_selected = selected_family == family[:name] %>
    <button type="button"
            class="inline-flex items-center gap-1.5 px-2 py-1.5 rounded-md text-xs font-medium transition-all cursor-pointer
                   <%= is_selected ? 'bg-base-content hover:bg-base-content/80 text-base-100' : 'bg-base-200 text-base-content/70 hover:bg-base-300' %>"
            data-action="click->palette-color-picker#selectFamily click->dropdown#close"
      data-family="<%= family[:name] %>"
      data-palette-color-picker-target="familyPill"
      data-selected="<%= is_selected %>">
      <span class="shrink-0 size-2.5 rounded-full <%= family[:color] %>"></span>
      <span class="truncate"><%= family[:name] %></span>
    </button>
  <% end %>
</div>
