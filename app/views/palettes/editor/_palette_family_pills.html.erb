<%# locals: (selected_family: nil) %>

<div class="flex gap-2 overflow-x-auto scrollbar-hide pb-1" data-palette-color-picker-target="familyPills">
  <% color_family_tags.each do |family| %>
    <% is_selected = selected_family == family[:name] %>
    <button type="button"
            class="flex items-center gap-1.5 px-3 py-1.5 rounded-md text-sm font-medium whitespace-nowrap transition-all cursor-pointer
                   <%= is_selected ? 'bg-base-content hover:bg-base-content/80 text-base-100' : 'bg-base-100 border border-base-content text-base-content/70 hover:bg-base-200' %>"
            data-action="click->palette-color-picker#selectFamily"
      data-family="<%= family[:name] %>"
      data-palette-color-picker-target="familyPill"
      data-selected="<%= is_selected %>">
      <span class="shrink-0 size-3 rounded-full <%= family[:color] %>"></span>
      <span><%= family[:name] %></span>
    </button>
  <% end %>
</div>
