<%# Expects: product_color, brand, stash_item (can be nil) %>

<div class="mx-auto max-w-sm" id="color-detail-content">
  <%# Color card %>

    <div class="flex justify-between items-start mb-6">
      <%# Heading %>
      <div>
        <h1 class="text-2xl font-semibold tracking-tight"><%= product_color.vendor_code %></h1>
        <p class="text-sm text-base-content/60 truncate"><%= brand.name %></p>
        <% if product_color.name.present? %>
          <p class="text-md text-base-content/70 truncate"><%= product_color.name %></p>
        <% end %>
      </div>

      <%# Dropdown menu %>
      <div class="dropdown dropdown-end">
        <div tabindex="0" 
             role="button" 
             class="btn btn-ghost btn-circle"
             title="More options">
          <%= icon(:ellipsis_horizontal_outline, css_class: "size-6") %>
        </div>

        <ul tabindex="-1" class="dropdown-content menu bg-base-100 rounded-lg w-52 p-2 border border-base-300 shadow-lg z-10">
          <% if policy(StashItem).create? %>
            <% if stash_item %>
              <% if policy(stash_item).update? %>
                <li class="menu-title">
                  <span class="text-xs font-medium text-base-content/50 uppercase">Stash label</span>
                </li>

                <% is_owned = stash_item.owned? %>
                <% is_wish_list = stash_item.wish_list? %>

                <%# Owned option %>
                <li>
                  <%= button_to stash_item_path(stash_item),
              method: :patch,
              params: { stash_item: { ownership_status: is_owned ? nil : :owned } },
              form_class: "contents",
              class: "flex items-center gap-2 px-3 py-2 rounded-md text-sm text-base-content/80 hover:bg-base-content/5 hover:text-base-content transition-colors cursor-pointer" do %>
                    <% if is_owned %>
                      <%= icon(:check_outline, css_class: "size-5") %>
                      Owned
                    <% else %>
                      <%= icon(:square_outline, css_class: "size-5 text-base-content/30") %>
                      Mark as owned
                    <% end %>
                  <% end %>
                </li>

                <%# Wish list option %>
                <li>
                  <%= button_to stash_item_path(stash_item),
              method: :patch,
              params: { stash_item: { ownership_status: is_wish_list ? nil : :wish_list } },
              form_class: "contents",
              class: "flex items-center gap-2 px-3 py-2 rounded-md text-sm text-base-content/80 hover:bg-base-content/5 hover:text-base-content transition-colors cursor-pointer" do %>
                    <% if is_wish_list %>
                      <%= icon(:shopping_bag_outline, css_class: "size-5") %>
                      Wish list
                    <% else %>
                      <%= icon(:square_outline, css_class: "size-5 text-base-content/30") %>
                      Add to wish list
                    <% end %>
                  <% end %>
                </li>

                <li class="h-px divider my-1"></li>
              <% end %>

              <%# Remove from stash option - now at the end %>
              <li>
                <%= button_to stash_item_path(stash_item),
            method: :delete,
            params: { stash_item: { product_color_id: product_color.id } },
            form_class: "contents",
            class: "flex items-center gap-2 px-3 py-2 rounded-md text-sm text-base-content/80 hover:bg-base-content/5 hover:text-base-content transition-colors cursor-pointer" do %>
                  <%= icon(:x_mark_outline, css_class: "size-5") %>
                  Remove from stash
                <% end %>
              </li>

            <% else %>
              <%# Add to stash option %>
              <li>
                <%= button_to stash_items_path,
            params: { stash_item: { product_color_id: product_color.id } },
            form_class: "contents",
            class: "flex items-center gap-2 px-3 py-2 rounded-md text-sm text-base-content/80 hover:bg-base-content/5 hover:text-base-content transition-colors cursor-pointer" do %>
                  <%= icon(:plus_outline, css_class: "size-5") %>
                  Add to stash
                <% end %>
              </li>
            <% end %>

          <% else %>
            <%# Not logged in %>
            <li>
              <%= link_to login_path, 
          data: { turbo_frame: "_top" },
          class: "flex items-center gap-2 px-3 py-2 rounded-md text-sm text-base-content/80 hover:bg-base-content/5 hover:text-base-content transition-colors" do %>
                <%= icon(:log_in_outline, css_class: "size-5") %>
                Sign in to save
              <% end %>
            </li>
          <% end %>
        </ul>

      </div>

    </div>


</div>

<%# Stitch preview area with tabs %>
<div data-controller="stitch-preview fabric-background"
         data-stitch-preview-color-value="<%= product_color.hex_color %>">

  <%# Tab buttons %>
  <div role="tablist" 
           aria-label="Stitch texture preview"
           class="flex rounded-full bg-base-content/10 p-1 text-xs font-medium">
    <button type="button"
                role="tab"
                aria-selected="true"
                aria-controls="stitch-preview-panel"
                data-stitch-preview-target="tabButton"
                data-pattern="solid"
                data-action="click->stitch-preview#switchPattern"
      class="flex-1 px-3 py-1.5 rounded-full transition-all cursor-pointer">
      Solid
    </button>
    <button type="button"
                role="tab"
                aria-selected="false"
                aria-controls="stitch-preview-panel"
                data-stitch-preview-target="tabButton"
                data-pattern="seed"
                data-action="click->stitch-preview#switchPattern"
      class="flex-1 px-3 py-1.5 rounded-full transition-all cursor-pointer">
      Seed
    </button>
    <button type="button"
                role="tab"
                aria-selected="false"
                aria-controls="stitch-preview-panel"
                data-stitch-preview-target="tabButton"
                data-pattern="chain"
                data-action="click->stitch-preview#switchPattern"
      class="flex-1 px-3 py-1.5 rounded-full transition-all cursor-pointer">
      Chain
    </button>
    <button type="button"
                role="tab"
                aria-selected="false"
                aria-controls="stitch-preview-panel"
                data-stitch-preview-target="tabButton"
                data-pattern="satin"
                data-action="click->stitch-preview#switchPattern"
      class="flex-1 px-3 py-1.5 rounded-full transition-all cursor-pointer">
      Satin
    </button>
  </div>

  <%# Preview area %>
  <div id="stitch-preview-panel"
           role="tabpanel"
           class="px-8 py-16 rounded-md transition-colors duration-300"
           data-action="fabric-picker:styleChanged@window->fabric-background#update">

    <%# SVG with pattern definitions %>
    <svg class="aspect-1 w-full rounded-md" 
             data-stitch-preview-target="preview"
             viewBox="0 0 300 300" 
             preserveAspectRatio="xMidYMid slice"
             aria-hidden="true">
      <defs>
        <%= render "product_colors/stitch_patterns/seed", hex_color: product_color.hex_color %>
        <%= render "product_colors/stitch_patterns/chain", hex_color: product_color.hex_color %>
        <%= render "product_colors/stitch_patterns/satin", hex_color: product_color.hex_color %>
      </defs>

      <%# Rectangle - fill changes based on selected pattern %>
      <rect data-stitch-preview-target="swatch"
                x="0" y="0" width="100%" height="100%" 
                rx="6"
                fill="#<%= product_color.hex_color %>"/>
      </svg>
    </div>
  </div>
