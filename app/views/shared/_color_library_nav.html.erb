<nav class="sticky top-0 z-40 bg-white -mx-4 px-4 py-3">

  <%# Color family pills %>
  <ul class="flex gap-2 overflow-x-auto scrollbar-hide pb-3" data-scroll-spy-target="pillContainer">
    <% colors_by_family.each do |family, _colors| %>
      <% tag_info = color_family_tags.find { |t| t[:name] == family } %>
      <li>
        <a
          href="#<%= family.parameterize %>"
          class="flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-medium whitespace-nowrap bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors" data-scroll-spy-target="pill"
data-action="click->scroll-spy#scrollToSection">
          <span class="size-3 rounded-full <%= tag_info&.dig(:color) || 'bg-gray-400' %>"></span>
          <%= family %>
        </a>
      </li>
    <% end %>
  </ul>

  <%# Search bar %>
  <label class="input">
    <svg class="h-[1em] opacity-50" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
      <g
        stroke-linejoin="round"
        stroke-linecap="round"
        stroke-width="2.5"
        fill="none"
        stroke="currentColor">
        <circle cx="11" cy="11" r="8"></circle>
        <path d="m21 21-4.3-4.3"></path>
      </g>
    </svg>
    <input type="search" placeholder="Search colors..." />
  </label>

</nav>
