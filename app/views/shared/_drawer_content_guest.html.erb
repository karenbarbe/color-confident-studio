<aside class="bg-base-100 min-h-full w-72 flex flex-col py-2">

  <%# Logo %>
  <div class="h-16 px-3 flex items-center border-b border-base-content/20 mb-2">
    <%= link_to root_path, class: "flex items-center gap-3 h-10 rounded-lg w-full" do %>
      <span class="sidebar-icon sidebar-logo-icon">
        <%= render "shared/logo_isotype" %>
      </span>
      <span class="font-semibold text-lg leading-none truncate">
        Color Confident
      </span>
    <% end %>
  </div>

  <%# Navigation items %>
  <nav class="flex-1 flex flex-col py-2 px-2">
    <ul class="flex flex-col gap-1">
      <li>
        <%= link_to color_charts_path, 
            class: "flex items-center gap-3 h-10 px-3 rounded-lg transition-colors text-base-content/70 hover:bg-base-content/5 hover:text-base-content" do %>
          <span class="sidebar-icon">
            <%= icon(:swatch_outline, css_class: "size-6") %>
          </span>
          <span class="sidebar-label">Browse color charts</span>
        <% end %>
      </li>
      <li>
        <%= link_to signup_path, 
            class: "flex items-center gap-3 h-10 px-3 rounded-lg transition-colors text-base-content/70 hover:bg-base-content/5 hover:text-base-content" do %>
          <span class="sidebar-icon">
            <svg xmlns="http://www.w3.org/2000/svg" class="size-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M18 7.5v3m0 0v3m0-3h3m-3 0h-3m-2.25-4.125a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0ZM3 19.235v-.11a6.375 6.375 0 0 1 12.75 0v.109A12.318 12.318 0 0 1 9.374 21c-2.331 0-4.512-.645-6.374-1.766Z" />
            </svg>
          </span>
          <span class="sidebar-label">Sign up</span>
        <% end %>
      </li>
      <li>
        <%= link_to login_path, 
            class: "flex items-center gap-3 h-10 px-3 rounded-lg transition-colors text-base-content/70 hover:bg-base-content/5 hover:text-base-content" do %>
          <span class="sidebar-icon">
            <svg xmlns="http://www.w3.org/2000/svg" class="size-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0 0 13.5 3h-6a2.25 2.25 0 0 0-2.25 2.25v13.5A2.25 2.25 0 0 0 7.5 21h6a2.25 2.25 0 0 0 2.25-2.25V15m3 0 3-3m0 0-3-3m3 3H9" />
            </svg>
          </span>
          <span class="sidebar-label">Log in</span>
        <% end %>
      </li>
    </ul>
  </nav>
</aside>
