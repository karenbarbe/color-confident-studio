<% view_context ||= 'chart' %>

<ul class="grid grid-cols-2 @xs:grid-cols-3 @md:grid-cols-4 @2xl:grid-cols-5 @4xl:grid-cols-6 gap-4 @sm:gap-5 @lg:gap-6">
  <% product_colors.each do |product_color| %>

    <% if view_context == "stash" %>
      <% stash_item = @stash_items&.find { |si| si.product_color_id == product_color.id } %>
      <%= render "shared/color_swatch_stash", color: product_color, stash_item: stash_item %>
    <% else %>
      <%= render "shared/color_swatch_chart", color: product_color %>
    <% end %>

  <% end %>
</ul>
