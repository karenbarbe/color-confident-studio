<% is_in_stash = controller_name == "color_libraries" && @stashed_color_ids.include?(color.id) %>

<li class="flex flex-col justify-center items-center list-none">

  <div class="w-full h-8 px-1 py-1 bg-gray-100 border border-gray-200 flex items-center justify-end rounded-t-lg rounded-b-md">
    <% if is_in_stash %>
      <div class="w-8 h-full flex justify-center items-center rounded-md bg-white">
        <%= icon (:check_outline) %>
      </div>
    <% end %>
  </div>
  
  <div class="w-9/10 h-20 sm:h-22" style="background-color: #<%= color.hex_color %>;"></div>

  <div class="w-full px-3 py-2 bg-gray-100 border border-gray-200 flex items-center justify-start rounded-t-md rounded-b-lg">
    <span class="text-xs  <%= is_in_stash ? 'font-bold' : 'font-semibold' %> text-gray-900"><%= color.vendor_code %></span>
  </div>

</li>
