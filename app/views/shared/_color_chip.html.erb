<% is_in_stash = controller_name == "color_libraries" && @stashed_color_ids.include?(color.id) %>

<li class="relative  flex flex-col list-none">

  <div class="h-22 rounded-t-lg" style="background-color: #<%= color.hex_color %>;"></div>

  <div class="px-3 py-2 bg-gray-200 flex items-center justify-start rounded-b-lg">
    <span class="text-xs font-semibold text-gray-900"><%= color.vendor_code %></span>
  </div>

  <% if is_in_stash %>
    <div class="absolute top-1.5 right-1.5 w-3 h-3 rounded-full bg-gray-800 border-2 border-white"></div>
  <% end %>
</li>
