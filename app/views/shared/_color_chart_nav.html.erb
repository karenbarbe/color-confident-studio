<nav class="sticky top-0 z-40 py-3 bg-base-100 shadow-[0_1px_2px_0_rgba(0,0,0,0.05)]">

  <div class="mx-auto px-4 md:max-w-4xl lg:max-w-5xl xl:max-w-6xl">
    <%# Color family pills %>
    <ul class="flex gap-2 overflow-x-auto scrollbar-hide py-4" data-scroll-spy-target="pillContainer">
      <% colors_by_family.each do |family, _colors| %>
        <% tag_info = color_family_tags.find { |t| t[:name] == family } %>
        <li>
          <a href="#<%= family.parameterize %>"
             class="flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-medium whitespace-nowrap transition-colors bg-base-200 hover:bg-base-content/10 text-base-content/70 hover:text-base-content data-[active=true]:bg-base-content data-[active=true]:hover:bg-base-content/70 data-[active=true]:text-base-100"
             data-scroll-spy-target="pill"
             data-action="click->scroll-spy#scrollToSection">
            <span class="size-3 rounded-full <%= tag_info&.dig(:color) || 'bg-gray-400' %>"></span>
            <%= family %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>

</nav>
