<nav class="sticky top-0 z-40 bg-base-100 py-3">

  <%# Color family pills %>
  <ul class="flex gap-2 overflow-x-auto scrollbar-hide py-4" data-scroll-spy-target="pillContainer">
    <% colors_by_family.each do |family, _colors| %>
      <% tag_info = color_family_tags.find { |t| t[:name] == family } %>
      <li>
        <a
          href="#<%= family.parameterize %>"
          class="flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-medium whitespace-nowrap transition-colors" data-scroll-spy-target="pill"
data-action="click->scroll-spy#scrollToSection">
          <span class="size-3 rounded-full <%= tag_info&.dig(:color) || 'bg-gray-400' %>"></span>
          <%= family %>
        </a>
      </li>
    <% end %>
  </ul>

</nav>
