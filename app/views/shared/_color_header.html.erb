<header>

  <div class="mt-4 space-y-4">
    <%# Brand name %>
    <h1 class="text-2xl sm:text-3xl font-bold text-base-content text-balance"><%= brand.name %></h1>

    <%# Stats row %>
    <div class="flex items-center gap-3 sm:gap-4 text-sm text-base-content/70">
      <span class="flex items-center gap-1 sm:gap-1.5">
        <%= icon (:grid_outline) %>
        <span><%= color_count %> colors</span>
      </span>

      <% if stash_count && stash_count > 0 %>
        <span class="flex items-center gap-1 sm:gap-1.5">
          <%= icon (:heart_solid) %>
          <span><%= stash_count %> in your stash</span>
        </span>
      <% end %>
    </div>
  </div>

</header>
