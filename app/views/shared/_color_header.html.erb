<header>
   
<div class="mt-4">
  <%# Brand name %>
  <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 text-balance mt-1"><%= brand.name %></h1>

  <%# Stats row %>
  <div class="mt-3 flex items-center gap-3 sm:gap-4 text-sm text-gray-500">
    <span class="flex items-center gap-1 sm:gap-1.5">
      <%= icon (:grid_outline) %>
      <span><%= color_count %> colors</span>
    </span>

    <% if stash_count && stash_count > 0 %>
      <span class="flex items-center gap-1 sm:gap-1.5">
        <%= icon (:heart_solid) %>
        <span><%= stash_count %> saved</span>
      </span>
    <% end %>
  </div>
</div>

</header>
