<div data-controller="color-panel" id="color-detail-container">

  <!-- Backdrop -->
  <div data-color-panel-target="backdrop" 
      data-action="click->color-panel#close"
      class="hidden fixed inset-0 bg-black/50 z-40 md:hidden">
  </div>

  <!-- Panel -->
  <div data-color-panel-target="panel"
      class="color-detail-panel invisible fixed z-50 bg-base-100 shadow-xl">

    <!-- Close button -->
    <button data-action="click->color-panel#close" 
      class="absolute top-4 right-4 p-2 rounded-full hover:bg-base-200 transition-colors z-10">
      <svg xmlns="http://www.w3.org/2000/svg" class="size-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    </button>

    <!-- Turbo Frame for content -->
    <div class="h-full overflow-y-auto p-6 pt-14">
      <%= turbo_frame_tag "color_detail" %>
    </div>
  </div>
</div>
