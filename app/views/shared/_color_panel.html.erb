<div data-controller="color-panel" 
     data-color-panel-layout-target="panel"
     id="color-detail-container">

  <!-- Backdrop (mobile only) -->
  <div data-color-panel-target="backdrop" 
      data-action="click->color-panel#close"
    class="hidden fixed inset-0 bg-black/50 z-40 md:hidden">
  </div>

  <!-- Panel -->
  <aside data-color-panel-target="panel"
         class="color-detail-panel">

    <!-- Close button -->
    <button data-action="click->color-panel#close" 
      class="absolute top-4 right-4 btn btn-circle btn-ghost text-base-content/70 hover:text-base-content cursor-pointer">
      <%= icon(:x_mark_outline, css_class: "size-6") %>
    </button>

    <!-- Turbo Frame for content -->
    <div class="h-full overflow-y-auto p-6 pt-14">
      <%= turbo_frame_tag "color_detail" %>
    </div>
  </aside>
</div>
