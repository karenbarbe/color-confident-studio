<%# locals: (notice: nil, alert: nil) %>

<% if notice.present? %>
  <div class="bg-emerald-50 text-emerald-800 px-4 py-3 rounded-lg shadow-lg border border-emerald-200 flex items-center gap-3 animate-slide-in"
       data-controller="auto-dismiss"
       data-auto-dismiss-delay-value="3000">
    <svg xmlns="http://www.w3.org/2000/svg" class="size-5 text-emerald-500 shrink-0" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
    </svg>
    <span class="text-sm font-medium"><%= notice %></span>
    <button type="button" class="ml-auto text-emerald-500 hover:text-emerald-700" data-action="click->auto-dismiss#dismiss">
      <svg xmlns="http://www.w3.org/2000/svg" class="size-4" viewBox="0 0 20 20" fill="currentColor">
        <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
      </svg>
    </button>
  </div>
<% end %>

<% if alert.present? %>
  <div class="bg-red-50 text-red-800 px-4 py-3 rounded-lg shadow-lg border border-red-200 flex items-center gap-3 animate-slide-in"
       data-controller="auto-dismiss"
       data-auto-dismiss-delay-value="5000">
    <svg xmlns="http://www.w3.org/2000/svg" class="size-5 text-red-500 shrink-0" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-5a.75.75 0 01.75.75v4.5a.75.75 0 01-1.5 0v-4.5A.75.75 0 0110 5zm0 10a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
    </svg>
    <span class="text-sm font-medium"><%= alert %></span>
    <button type="button" class="ml-auto text-red-500 hover:text-red-700" data-action="click->auto-dismiss#dismiss">
      <svg xmlns="http://www.w3.org/2000/svg" class="size-4" viewBox="0 0 20 20" fill="currentColor">
        <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
      </svg>
    </button>
  </div>
<% end %>
