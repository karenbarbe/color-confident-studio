<ul class="max-w-sm flex flex-wrap gap-3">

  <% color_family_tags.each do |family| %>
    <li class="px-2 py-2 flex justify-center items-center gap-1 rounded bg-gray-100">
      <div class="size-3 rounded-full <%= family[:color] %>"></div>
      <span class="text-xs font-semibold text-gray-700"><%= family[:name] %></span>
    </li>
  <% end %>

</ul>
